{{> header}}
<style>
  input,
  .btn {
    margin: 10px 3px !important;
  }

  input {
    width: 70% !important;
    display: inline-block !important;
  }

  #unique {
    width: 100%;
    display: block;
  }

  .remove {
    display: inline-block;
    margin: 0 5px 0 0;
  }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h2>{{title}}</h2>
    {{#if lend}}
    <p><a href="/user/library">Back to my library</a></p>
    {{^}}
    <p><a href="/user/library/lend">See Books you lend to others</a></p>
    {{/if}}
    <hr>
  </div>
      <div class="row"></div>

      <div class="col-md-12" id="suggestedBooks">

        {{#each books}}
        <div class="thumbnail" style="display: inline-block; width: 18%">
          <img src="{{img_url}}" alt="{{book_title}}">
          <div class="caption">
            <h3>{{book_title}}</h3>
            <p>Publisher: {{publisher}} <br> Date: {{date}} <br> Author: <strong>{{author}}</strong></p>
            {{#if ../lend}}
            {{^}}
            <p>
              <a href="/books/remove/?id={{_id}}" class="btn btn-danger btn-block" role="button">Remove!</a>
            </p>
            {{/if}}
          </div>
        </div>
        {{/each}}

      </div>
</div>


{{> footer}}