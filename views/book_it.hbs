{{> header}}
<style>
  input,
  .btn {
    margin: 10px 3px !important;
  }

  input {
    width: 70% !important;
    display: inline-block !important;
  }

  #unique {
    width: 100%;
    display: block;
  }

  .remove {
    display: inline-block;
    margin: 0 5px 0 0;
  }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h2>{{title}}</h2>
    <hr>

    <form method="POST">
      <label>Book title</label>

      <br>
      <input type="text" class="form-control" name="book_title" value="{{book_title}}">
      <input class="btn btn-primary" style="width: 20% !important;" type="Submit" name="submit" value="Submit">
      <br>
    </form>

      <label>Online Books</label>
      <small>(Choose one book from below to add to your library)</small>
    </div>
      <div class="row"></div>

      <div class="col-md-12" id="suggestedBooks">

        {{#each books}}
        <div class="thumbnail" style="display: inline-block; width: 18%">
          <img src="{{volumeInfo.imageLinks.smallThumbnail}}" alt="{{volumeInfo.title}}">
          <div class="caption">
            <h3>{{volumeInfo.title}}</h3>
            <p>Publisher: {{volumeInfo.publisher}} <br> Date: {{volumeInfo.publishedDate}} <br> Author: <strong>{{volumeInfo.authors}}</strong></p>
            <p>
              <a href="/books/new/final/?t={{volumeInfo.title}}&img={{volumeInfo.imageLinks.encodedsmallThumbnail}}&p={{volumeInfo.publisher}}&d={{volumeInfo.publishedDate}}&a={{volumeInfo.authors}}" class="btn btn-success btn-block" role="button">Add to my library!</a>
            </p>
          </div>
        </div>
        {{/each}}

      </div>
</div>


{{> footer}}