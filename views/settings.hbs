{{> header}}
<style>
  input,
  .btn {
    margin: 10px 3px !important;
  }

  input {
    width: 70% !important;
    display: inline-block !important;
  }

  #unique {
    width: 100%;
    display: block;
  }

  .remove {
    display: inline-block;
    margin: 0 5px 0 0;
  }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h2>{{title}}</h2>
    <hr>

    <form method="POST">
      <label>Change your Name - <small>Changes will take place after re-logging in</small></label>

      <br>
      <input type="text" class="form-control" name="name" placeholder="Enter your new Name">
      <input class="btn btn-primary" style="width: 20% !important;" type="Submit" name="submit" value="Submit">
      <br>
      
    </form>
    <form method="POST">
     
      <label>Change your City <small>(Currently: {{city}})</small></label>

      <br>
      <input type="text" class="form-control" name="city" placeholder="Enter your new City">
      <input class="btn btn-primary" style="width: 20% !important;" type="Submit" name="submit" value="Submit">
      <br>
    
    </form>
    <form method="POST">
    
      <label>Change your State <small>(Currently: {{state}})</small></label>

      <br>
      <input type="text" class="form-control" name="state" placeholder="Enter your new State">
      <input class="btn btn-primary" style="width: 20% !important;" type="Submit" name="submit" value="Submit">
      <br>
    </form>

  </div>

</div>


{{> footer}}